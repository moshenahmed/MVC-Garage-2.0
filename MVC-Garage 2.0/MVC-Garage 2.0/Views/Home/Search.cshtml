@model IEnumerable<MVC_Garage_2._0.Models.ParkedVehicle>

<div class="row" id="Search">
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Type)
            </th>
            <th>
                @*@Html.DisplayNameFor(model => model.RegNumber)*@
                @Html.ActionLink("Registration Number", "Index", new { sortOrder = ViewBag.RegNoSortParm })
            </th>
            <th>
                @Html.ActionLink("Color", "Index", new { sortOrder = ViewBag.ColorSortParm })
                @*@Html.DisplayNameFor(model => model.Colour)*@
            </th>
            <th>
                @Html.ActionLink("Brand", "Index", new { sortOrder = ViewBag.BrandSortParm })
            </th>
            <th>
                @Html.ActionLink("Model", "Index", new { sortOrder = ViewBag.ModelSortParm })
            </th>
            <th>
                @Html.ActionLink("Number of wheels", "Index", new { sortOrder = ViewBag.WheelsSortParm})
                @*@Html.DisplayNameFor(model => model.NoOfWheels)*@
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CheckIn)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Type)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.RegNumber)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Colour)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Brand)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Model)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NoOfWheels)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CheckIn)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                    @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                </td>
            </tr>
        }

    </table>
</div>